<div class="container theme-showcase" role="main">
	<div class="jumbotron_cocktail">
		<h1>Discover your next house drink!</h1>
	        <p><strong>house drink</strong> [n., hous dringk] 1. A mixed drink that can be made at a moment's notice, without needing to think about it or purchase additional ingredients. <i>"My grandmother's house drink is a Manhattan..she has one every evening before bed.</i></p>
	        <%= form_tag("/recipes/recipe_search_results", method: "get") do %>
	        <div class="input-group">
	            <input type="text" class="form-control" placeholder="Search" name="query" id="recipe_search" autocomplete="off">
	            <div class="input-group-btn">
	                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search icon-blue"></i></button>
	            </div>
	        </div>
	        <% end %>
	 </div>
 </div>


<div class="container">
  <div class="row">
      
      <div class="col-sm-4">
        
        <div class = "row">
          <div class="col-sm-12">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">Do you have?</h3>
              </div>
              <div class="panel-body">
                <ul class="recipes" id = "popular_ingredients">
                  <% @popular_ingredients.each do |ingredient| %>
                    <li id="ingredient<%= ingredient.id %>">
                      <%= link_to root_path, :id => "ingredient-"+ingredient.id.to_s, :data => {:direction => 1, :ingredient_id => ingredient.id.to_s, :display_name => ingredient.display_name}, :remote => true do %> 
                      <%= ingredient.display_name %> <i id="glyph-<%= ingredient.id.to_s %>" class="glyphicon glyphicon-ok-circle icon-blue"></i>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div class = "row">
          <div class="col-sm-12">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">My Ingredients</h3>
              </div>
              <div class="panel-body">
                <ul class="recipes" id="selected_ingredients">
                    
                </ul>
              </div>
            </div>
          </div><!-- /.col-sm-4 -->
        </div>

      </div><!-- /.col-sm-4 -->

      
      <div class="col-sm-8">
        <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title">Recipes</h3>
            </div>
            <div class="panel-body">
              <ul class="recipes" id="recipes">
                <%= render partial: 'recipe_grid', locals: { recipes: @recipes} %>
              </ul>
            </div>
          </div>
        </div>
    </div>
</div>
