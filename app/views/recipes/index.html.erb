<div class="container theme-showcase" role="main">
	<div class="jumbotron_cocktail">
		<h1>Discover your new house drink!</h1>
	        <center><p><i>The house drink</i>, the one you can make at a moment's notice, without needing to think about it. <p><i><strong>What's yours?</strong></i></p></p></center>
	        <%= form_tag("/recipes", method: "get") do %>
	        <div class="input-group">
	            <input type="text" class="form-control" placeholder="Search" name="query" id="recipe_search" autocomplete="off">
	            <div class="input-group-btn">
	                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search icon-blue"></i></button>
	            </div>
	        </div>
	        <% end %>
	 </div>
 </div>
<div class="container">
	<div class="row">
	<% params[:ingredient_list] ||= [] %>
        <div class="col-sm-4">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Do you have?</h3>
            </div>
            <div class="panel-body">
              <ul class="recipes" id = "popular_ingredients">
                <% @popular_ingredients.each do |ingredient| %>
                  <li id="ingredient<%= ingredient.id %>">
                  <% params[:ingredient_list].push(ingredient.display_name) %>
      				
                  <%= link_to search_from_ingredients_path(:ingredient_list => params[:ingredient_list]), :id => "ingredient-"+ingredient.id.to_s, :data => {:direction => 1, :ingredient_id => ingredient.id.to_s}, :remote => true do %> 
                  <%= ingredient.display_name %> <i class="glyphicon glyphicon-ok-circle icon-blue"></i>
                  <% end %>
                  
                  <% params[:ingredient_list].delete(ingredient.display_name) %>
                  <!--<button class="btn btn-default" 
                  onclick='sayHello("ingredient<%= ingredient.id %>","<%= ingredient.display_name %>")'>
                  <i class="glyphicon glyphicon-ok-circle icon-blue"></i></button> --></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div><!-- /.col-sm-4 -->

        <div class="col-sm-4">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">My Ingredients</h3>
            </div>
            <div class="panel-body">
              <ul class="recipes" id="selected_ingredients">
                
              </ul>
            </div>
          </div>
        </div><!-- /.col-sm-4 -->

        <div class="col-sm-4">
          <div class="panel panel-warning">
            <div class="panel-heading">
              <h3 class="panel-title">Recipes</h3>
            </div>
            <div class="panel-body">
              <ul class="recipes" id="recipes">
                <%= render partial: 'recipe_grid', locals: { recipes: @recipes} %>
              </ul>
            </div>
          </div>
        </div><!-- /.col-sm-4 -->

 	</div>
 	<div class="row">
 		<div class="col-sm-8">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Recipes</h3>
            </div>
            <div class="panel-body">
              <ul class="recipes">
		  		<%= render @recipes %>
			</ul>

            </div>
          </div>
        </div><!-- /.col-sm-4 -->
     </div>


</div>
